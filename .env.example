# =============================================================================
# Customer Environment Variables
# =============================================================================
# Copy to .env.dev, .env.staging, .env.prod
# DO NOT commit .env files with real values!
# =============================================================================

# Customer identification
CUSTOMER_NAME=customer-name

# Azure Container Registry
ACR_URL=acrswarmxxxxxx.azurecr.io
VERSION=latest

# Application domain
APP_DOMAIN=app.customer-domain.com

# Environment
ENVIRONMENT=Production

# Database
DB_USER=customer_user
DB_PASSWORD=use-docker-secrets-not-this
DB_NAME=customer_db

# Resource limits - Application
APP_REPLICAS=1
APP_CPU_LIMIT=1
APP_MEMORY_LIMIT=1G
APP_CPU_RESERVE=0.25
APP_MEMORY_RESERVE=256M

# Resource limits - Database
DB_CPU_LIMIT=1
DB_MEMORY_LIMIT=1G
DB_CPU_RESERVE=0.25
DB_MEMORY_RESERVE=256M
